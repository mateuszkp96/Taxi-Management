<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender"/>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>
</configuration>